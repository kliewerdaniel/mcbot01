# ========================================
# Research Assistant GraphRAG Configuration
# ========================================

# ========================================
# NEO4J DATABASE CONFIGURATION
# ========================================

# Neo4j connection URI
NEO4J_URI=bolt://localhost:7687

# Neo4j authentication credentials
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=research2025

# Neo4j database name (optional, defaults to neo4j)
# NEO4J_DATABASE=neo4j

# ========================================
# OLLAMA CONFIGURATION
# ========================================

# Ollama server host
OLLAMA_HOST=http://localhost:11434

# Primary reasoning model
OLLAMA_MODEL=granite4:micro-h

# Embedding model for similarity calculations
OLLAMA_EMBEDDING_MODEL=mxbai-embed-large:latest

# ========================================
# REDIS CONFIGURATION
# ========================================

# Redis connection URL
REDIS_URL=redis://localhost:6379

# Redis database number (optional, defaults to 0)
# REDIS_DB=0

# ========================================
# APPLICATION SETTINGS
# ========================================

# Server configuration
HOST=0.0.0.0
PORT=8000

# Development settings
DEBUG=true
RELOAD=false

# ========================================
# UPLOAD CONFIGURATION
# ========================================

# Maximum number of files per upload
UPLOAD_BATCH_SIZE=10

# Maximum file size in bytes (50MB default)
MAX_FILE_SIZE=50000000

# Maximum total upload size in bytes (200MB default)
MAX_TOTAL_UPLOAD_SIZE=200000000

# ========================================
# ENTITY EXTRACTION CONFIGURATION
# ========================================

# Minimum confidence threshold for entity extraction (0.0-1.0)
CONFIDENCE_THRESHOLD=0.6

# Maximum chunk size for document processing
MAX_CHUNK_SIZE=1000

# Overlap size between chunks
OVERLAP_SIZE=200

# ========================================
# MCP (Model Context Protocol) CONFIGURATION
# ========================================

# MCP server port
MCP_SERVER_PORT=3001

# Maximum context tokens for MCP
MCP_MAX_CONTEXT_TOKENS=16000

# ========================================
# FRONTEND CONFIGURATION
# ========================================

# Frontend base URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# ========================================
# SECURITY CONFIGURATION
# ========================================

# Secret key for JWT tokens and session management
SECRET_KEY=your-secret-key-change-this-in-production

# JWT token expiration time in minutes
JWT_EXPIRE_MINUTES=1440

# ========================================
# LOGGING CONFIGURATION
# ========================================

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path
LOG_FILE=logs/app.log

# ========================================
# TESTING CONFIGURATION (for development)
# ========================================

# Skip Ollama checks during testing
SKIP_OLLAMA_TESTS=false

# Use mock database for tests
USE_MOCK_DB=false

# ========================================
# PRODUCTION OVERRIDES
# ========================================

# Example production configuration:
#
# NEO4J_URI=bolt://your-neo4j-cluster:7687
# NEO4J_USERNAME=prod_user
# NEO4J_PASSWORD=secure_password_123
# REDIS_URL=redis://your-redis-cluster:6379
# DEBUG=false
# SECRET_KEY=your-production-secret-key-min-32-chars
# LOG_LEVEL=WARNING
# HOST=0.0.0.0
# FRONTEND_URL=https://yourdomain.com
# ALLOWED_ORIGINS=https://yourdomain.com,https://admin.yourdomain.com
